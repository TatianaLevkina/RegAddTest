<Window x:Class="RegApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Пароль" Margin="5"/>
            <TextBox x:Name="PasswordBox" Margin="5"/>
            <Button x:Name="TestButton" Content="Проверить пароль" Click="TestButton_Click" Margin="5"/>
        </StackPanel>
        
    </Grid>
</Window>
